<h2>Lista de Reservas</h2>

<% reservas.forEach(item=> { %>
  <article>
    <p>ID da Reserva: <%= item.id_reserva %>
    </p>
    <p>Nome do Usuário: <%= item.nome_usuario %>
    </p>
    <p>Número da Sala: <%= item.número_sala %>
    </p>
    <p>Horário: <%= item.horário %>
    </p>
    <p>Grupo: <%= item.identificador_grupo_reservas %>
    </p>

    <div style="display:flex; flex-direction: row; gap: 1vw;">
      <form action="/reservas/edit/<%= item.id_reserva %>" method="POST"
        style="display:flex; flex-direction: row; gap: 0.5vw;">
        <label for="número_sala">Número da Sala:</label>
        <input type="number" name="número_sala" required><br><br>

        <label for="horário">Horário (AAAA-MM-DD HH:MM:SS):</label>
        <input type="text" name="horário" required><br><br>

        <button type="submit">Editar</button>
      </form>
      <form action="/reservas/delete/<%= item.id_reserva %>" method="POST" style="display:flex; flex-direction: row; gap: 0.5vw;">
        <button type="submit">Deletar</button>
      </form>
    </div>
  </article>
  <% }) %>

    <h2>Cadastrar nova reserva:</h2>
    <form action="/reservas" method="POST">
      <label for="numero_sala">Número da Sala:</label>
      <input type="number" name="número_sala" required><br><br>

      <label for="horário">Horário (AAAA-MM-DD HH:MM:SS):</label>
      <input type="text" name="horário" required><br><br>

      <label for="id_usuário">ID do Usuário:</label>
      <input type="number" name="id_usuário" required><br><br>

      <label for="identificador_grupo_reservas">ID do Grupo:</label>
      <input type="number" name="identificador_grupo_reservas" required><br><br>

      <button type="submit">Reservar</button>
    </form>